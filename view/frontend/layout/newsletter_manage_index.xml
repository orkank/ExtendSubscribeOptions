<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Hide standard newsletter checkbox completely -->
        <referenceBlock name="customer_newsletter" remove="true"/>

        <!-- Add our custom subscription options -->
        <referenceContainer name="content">
            <block class="IDangerous\ExtendSubscribeOptions\Block\Newsletter\Additional"
                   name="customer.form.newsletter.custom"
                   template="IDangerous_ExtendSubscribeOptions::newsletter/additional.phtml"/>
        </referenceContainer>
    </body>
</page>